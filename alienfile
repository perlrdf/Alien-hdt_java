use alienfile;

# replace this with your own system probe.
# See Alien::Build::Plugin::Probe and
# Alien::Build::Plugin::PkgConfig for common
# probe plugins.
probe sub { 'share' };

share {
  start_url 'https://github.com/rdfhdt/hdt-java/releases/download/v3.0.10';
  plugin Download => (
    filter  => qr/^rdfhdt.*tar\.gz$/,
    version => qr/([0-9\.]+)/,
  );
  plugin Extract => 'tar.gz';
  plugin 'Gather::IsolateDynamic';
}
